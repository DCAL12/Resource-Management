{{!-- Handlebars Sitewide Layout -- make changes here that will apply to the entire site --}}
<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <meta name="description" content="{{siteDescription}}">
    <link rel="stylesheet" media="screen" href="/stylesheets/style.css">
    <!-- Adds HTML5 element support for earlier versions of IE -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body>
    <header role="banner">
        <h1><a href="/"  title="{{siteTitle}}">{{siteTitle}}</a></h1>
        <div id="accountInfo">
            <label for="accountInfo">Account: </label>
            {{#if userName}}
                <a href="/users/account" title="Modify Account">{{userName}} | </a>
                <a href="/users/logout" title="Logout">Logout</a>
            {{else}}
                <a href="/users/login" title="Login">Login | </a>
                <a href="/users/create" title="Create Account">Create Account</a>
            {{/if}}
        </div>

        <nav role="navigation" class="siteNavigation">
            {{!-- Application-wide navigation menu goes here (no <nav> tags required). Navigation items are set in app.locals.navigationItems and appear here as list items. The link for the current view has a class of "active". --}}
            <ul>
                {{#each navigationItems}}
                    <li><a href="{{this.route}}" title="{{this.title}}">{{this.title}}</a></li>
                {{/each}}
            </ul>
        </nav>
    </header>

    <main role="main" class="{{className}}">
        <h2>{{title}}</h2>
        {{{body}}}
    </main>

<footer>
</footer>

</body>
</html>