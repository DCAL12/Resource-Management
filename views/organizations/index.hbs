<header>
	<h2>{{title}}</h2> 
</header>

<ul>
	{{#each organizations}}
		<li><a href="/organizations/{{this.name}}" title="{{this.name}}">{{this.name}}</a></li>
		
		{{else}}
			<p>Sorry, there are no public organizations available... <a href="/organizations/create">Create One</a></p>
	{{/each}}
</ul>